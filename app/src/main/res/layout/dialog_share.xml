<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yuanjiao_15_baise_top"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="邀请好友赚金币"
            android:textColor="@color/black1"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:visibility="visible"
            android:src="@mipmap/ic_delete_black" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="分享即可获得最多88金币奖励！"
        android:textColor="@color/black2"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_pengyouquan"
            android:text="微信朋友圈"
            android:textColor="@color/black1"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="25dp"
            android:drawablePadding="10dp"
            android:paddingBottom="20dp"
            android:drawableTop="@mipmap/ic_weixin"
            android:text="微信好友"
            android:textColor="@color/black1"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:drawableTop="@mipmap/ic_qq"
            android:text="QQ好友"
            android:textColor="@color/black1"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:drawableTop="@mipmap/ic_kongjian"
            android:text="QQ空间"
            android:textColor="@color/black1"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:drawableTop="@mipmap/ic_weibo"
            android:text="新浪微博"
            android:textColor="@color/black1"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>